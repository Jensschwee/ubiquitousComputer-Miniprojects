<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS" />

    <CheckBox
        android:text="Hidden mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_settings_hidden" />

    <EditText
        android:text="name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_settings_name" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Location:"
            android:layout_weight="1"
            android:id="@+id/fragment_settings_location_textview_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Room ID:"
            android:layout_weight="1"
            android:id="@+id/fragment_settings_roomid_textview_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="-"
            android:layout_weight="1"
            android:id="@+id/fragment_settings_location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="-"
            android:layout_weight="1"
            android:id="@+id/fragment_settings_roomid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>